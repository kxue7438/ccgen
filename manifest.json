{
	"manifest_version": 3,
	"name": "Tab Audio Transcription",
	"version": "1.0",
	"permissions": [
		"tabCapture",
		"activeTab",
		"sidePanel",
		"storage"
	],
	"host_permissions": [
		"<all_urls>",
		"https://api.assemblyai.com/*"
	],
	"side_panel": {
		"default_path": "sidepanel.html"
	},
	"action": {
		"default_title": "Open Audio Transcription",
		"default_popup": "popup.html"
	},
	"background": {
		"service_worker": "background.js"
	},
	"options_page": "options.html"
}