{
  "manifest_version": 3,
  "name": "Live Captions (Web Speech + Gemini)",
  "version": "2.0.0",
  "description": "Real-time transcription with Web Speech API, translation with Gemini Nano",
  "permissions": [
    "tabCapture",
    "activeTab",
    "storage",
    "scripting",
    "offscreen"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["captions.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "minimum_chrome_version": "128"
}
